{
  "name": "secure-cargo-flow",
  "version": "1.0.0",
  "description": "Enterprise-grade cargo tracking with end-to-end encryption using FHEVM",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:local": "hardhat test test/SecureCargoFlow.ts",
    "test:sepolia": "hardhat test test/SecureCargoFlowSepolia.ts --network sepolia",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:local": "hardhat deploy --network hardhat",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "deploy:verify": "hardhat --network sepolia etherscan-verify",
    "node": "hardhat node",
    "accounts": "hardhat run tasks/accounts.ts",
    "cargo": "hardhat run tasks/SecureCargoFlow.ts",
    "clean": "hardhat clean && rm -rf artifacts cache types",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "fhevm",
    "cargo",
    "logistics",
    "encryption",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.18",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.16.5",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "cross-env": "^7.0.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@zama-fhe/oracle-solidity": "^0.1.0",
    "encrypted-types": "^0.0.4"
  },
  "overrides": {
    "ws@>=7.0.0 <7.5.10": ">=7.5.10",
    "axios@>=1.3.2 <=1.7.3": ">=1.7.4",
    "elliptic@>=4.0.0 <=6.5.6": ">=6.5.7",
    "elliptic@>=2.0.0 <=6.5.6": ">=6.5.7",
    "elliptic@>=5.2.1 <=6.5.6": ">=6.5.7",
    "micromatch@<4.0.8": ">=4.0.8",
    "elliptic@<6.6.0": ">=6.6.0",
    "elliptic@<6.5.6": ">=6.5.6",
    "undici@>=6.0.0 <6.21.1": ">=6.21.1",
    "undici@>=4.5.0 <5.28.5": ">=5.28.5",
    "elliptic@<=6.6.0": ">=6.6.1",
    "tar-fs@>=2.0.0 <2.1.2": ">=2.1.2",
    "axios@>=1.0.0 <1.8.2": ">=1.8.2",
    "axios@<0.29.1": ">=0.29.1",
    "cookie@<0.7.0": ">=0.7.0",
